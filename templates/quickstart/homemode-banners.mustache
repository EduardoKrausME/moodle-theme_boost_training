{{!
    @template theme_boost_training/quickstart/homemode-banners

    Example context (json): {}
}}

<label>
    <input type="checkbox" id="homemode_banners-{{$model}}{{/model}}"
           name="homemode_banners[]" value="{{$model}}{{/model}}"
           {{$checked}}{{/checked}}
           style="display: none;">
    <div class="marked-area">
        <img src="{{{config.wwwroot}}}/theme/boost_training/_editor/model/{{$model}}{{/model}}/print.png"
             alt="{{$label}}{{/label}}">
        <div class="label-caption">{{$label}}{{/label}}</div>
    </div>
</label>

<script>
    const checkbox = document.getElementById('homemode_banners-{{$model}}{{/model}}');
    // If initially marked.
    if (checkbox.checked) {
        // Prevents the user from unchecking.
        checkbox.addEventListener('click', function(event) {
            event.preventDefault(); // Prevents state change.
        });
    }
</script>
