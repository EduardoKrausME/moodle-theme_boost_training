<script>
    document.addEventListener('DOMContentLoaded', function () {

        // Radios
        const labels = document.querySelectorAll('#settings-content-home .radio-img');
        const contents = document.querySelectorAll('#settings-content-home .content-box');

        labels.forEach(label => {
            label.addEventListener('click', () => {
                // Remove previous selection.
                labels.forEach(l => l.classList.remove('selected'));
                contents.forEach(c => c.classList.remove('show'));

                // Mark the radio and highlight the image.
                label.classList.add('selected');
                label.querySelector('input[type="radio"]').checked = true;

                // Show related content.
                const targetId = label.getAttribute('data-target');
                document.getElementById(targetId).classList.add('show');
            });
        });

        // Uniques.
        const groupPrefixes = ['banner-', 'pricing-', 'featured-', 'differentials-'];
        document.querySelectorAll('#settings-content-home input[type="checkbox"][name="homemode_banners[]"]').forEach(input => {
            input.addEventListener('change', function () {
                if (this.checked) {
                    // Checks if the value starts with any of the defined prefixes.
                    const group = groupPrefixes.find(prefix => this.value.startsWith(prefix));
                    if (group) {
                        // Uncheck the other checkboxes in the same group.
                        document.querySelectorAll(`input[type="checkbox"][name="homemode_banners[]"]`).forEach(other => {
                            if (other !== this && other.value.startsWith(group)) {
                                other.checked = false;
                            }
                        });
                    }
                }
            });
        });
    });
</script>