{{!
    @template theme_boost_training/settings/color

    Example context (json):
    {
        "background": "#f0ff0f",
        "startcolor": true,
        "brandcolor": false,
        "footercolor": false
    }
}}
<div class="boost_training-theme-select-item"
     id="{{{uniqid}}}">
    <div class="preview" style="background:{{{background}}}"
         {{#startcolor}}
             onclick="document.querySelector('#id_s_theme_boost_training_startcolor').value='{{{background}}}'"
         {{/startcolor}}></div>
</div>

{{#js}}
    require(["jquery"], function($) {
        $("#{{{uniqid}}}").click(function() {
            {{#brandcolor}}
                $("#id_s_theme_boost_brandcolor")
                        .val("{{{background}}}")
                        .minicolors("settings", {value: "{{{background}}}"});
            {{/brandcolor}}

            {{#footercolor}}
                $("#id_s_theme_boost_training_footer_background_color")
                        .val("{{{background}}}")
                        .minicolors("settings", {value: "{{{background}}}"});
            {{/footercolor}}
        });
    });
{{/js}}
